
<div class="container-fluid vh-100 d-flex flex-fill justify-content-center align-items-center "
     style="background-image: url('https://askatechteacher.com/wp-content/uploads/2025/01/Natural-Disasters-Presentation.gif');">
  <div class="col-md-6 col-lg-4 glass-card rounded-3 shadow p-4">
    <h2 class="text-center mb-4">Log in</h2>
    <%= simple_form_for [@disaster, @booking] do |f| %>
      <div class="form-inputs">
      <%= f.input :start_date, as: :date %>
      <%= f.input :end_date, as: :date %>
      <%= f.input :user_id, as: :hidden, input_html: { value: current_user.id } %>
      </div>
      <div class="form-actions text-center mt-3">
        <%= f.button :submit, class: "btn btn-primary w-100" %>
      </div>
    <% end %>
    <div class="mt-3 text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
