<div
 class="container-fluid vh-100 d-flex flex-column justify-content-center align-items-center bg-cover
 " id="session_new" >
  <div class="col-md-6 col-lg-4">
    <h2 class="text-center mb-4">Log in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs border border-white border-1 rounded-5 shadow p-4" id="form">
        <%= f.input :email, required: false, autofocus: true, input_html: { autocomplete: "email" } %>
        <%= f.input :password, required: false, input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions text-center mt-3">
        <%= f.button :submit, "Log in", class: "btn btn-primary w-100" %>
      </div>
    <% end %>

    <div class="mt-3 text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
